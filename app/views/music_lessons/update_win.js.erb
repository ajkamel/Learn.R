$('#keyboard-container').prepend("<div class='win-message'><p>Nice Job!</p></div>");

if (<%= @next_lesson_id %> !== -1) {
  $('.win-message').append("<a href='/music_lessons/<%= @next_lesson_id %>'>Next Lesson</a>");
} else {
  $('.win-message').append("<p>You've completed all lessons! Check back for more in the future!</p>");
}

$('#total-score').fadeOut(function(){
  $(this).text(<%= current_user.score %>).fadeIn();
});
