<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :name %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :username %><br />
  <%= f.text_field :username  %></div>

  <div id="avatar">
    <%= f.label :avatar, image_tag('boy1.jpg') %>
    <%= f.radio_button :avatar, 'boy1.jpg', checked: 'checked' %>

    <%= f.label :avatar, image_tag('boy2.jpg') %>
    <%= f.radio_button :avatar, 'boy2.jpg' %>

    <%= f.label :avatar, image_tag('girl1.jpg') %>
    <%= f.radio_button :avatar, 'girl1.jpg' %>

    <%= f.label :avatar, image_tag('girl2.jpg') %>
    <%= f.radio_button :avatar, 'girl2.jpg' %>
  </div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
