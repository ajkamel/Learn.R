/* Welcome page, top logo, and main container*/
 #main_container {
  background: lightskyblue;
  min-height: 800px;
  padding: 10px 5px;
  font-family: 'Open Sans', sans-serif;
 }

 #logo {
  height: 90px;
 }

 #nav {
  display: inline-block;
 }

 #nav img {
  height: 70px;
 }

 #header {
  background: #088AFE url(<%= image_path('banner_100.png') %>) right no-repeat;
  height: 100px;
  overflow: hidden;
  font-family: 'Open Sans', sans-serif;
 }

 #header ul li {
  display: inline-block;
  padding: 10px;
 }

#welcome_container {
  text-align: center;
}

#welcome_box {
  background: white;
  display: inline-block;
  margin-top: -20px;
  padding: 50px;
  background: #D7FFD8;
}

#welcome_box h1 {
  font-size: 36px;
  padding: 20px;
}

#inner_welcome_box {
  margin: 0 auto;
  padding: 20px;
  width: 150px;
}

#inner_welcome_box a {
  padding: 10px;
}


/* User show page*/
#total-score {
  font-weight: bolder;
}

#user_sidebar {
  background-color: pink;
  font-size: 18px;
  padding: 10px;
  float: left;
  border-top: 50px;
  width: 175px;
}

#lesson_box {
  padding: 10px 10px 10px 20px;
  background-color: cyan;
  border: 1px;
  display: inline-block;
  text-align: left;
  line-height: 20px
}

#lesson_box h2 {
  font-weight: bolder;
  font-size: 24px;
  line-height: 32px;
  text-decoration: underline;
  padding: 10px 0 0 0;
}

#lesson_box h3 {
  font-weight: bolder;
  font-size: 18px;
  line-height: 32px;
  padding: 10px 0 0 0
}

/* Code lesson show*/
#code_lesson_text {
  line-height: 24px;
  padding: 16px 20px;
  float: left;
  width: 300px;
}

#code_lesson_text strong {
  font-weight: bolder;
}

#code_lesson_text h1 {
  font-weight: bolder;
  font-size: 24px;
  padding: 10px 0 10px 0;
}

#code_lessons_page {
  position: absolute;
}

.canvas {
  float: left;
}

a {
  text-decoration: none;
  color: blue;
}

a:hover {
  text-decoration: underline;
}

a:visited {
  color: purple;
}

.incomplete {

}
.completed {
  text-decoration: line-through;
}

.field {
  margin: 0 auto;
  padding: 10px;
  width: 700px;
}

.one-edge-shadow {
  -webkit-box-shadow: 0 8px 6px -6px gray;
     -moz-box-shadow: 0 8px 6px -6px gray;
          box-shadow: 0 8px 6px -6px gray;
}

.win-message {
  font-size: 36px;
  font-weight: bold;
  opacity: .9;
  background: rgb(254, 171, 9);
  border-radius: 10%;
  height: 400px;
  width: 600px;
  position: fixed;
  margin: 0 auto;
  text-align: center;
  vertical-align: middle;
  z-index: 1000;
}

.win-message p {
  margin-top: 100px;
  padding: 40px;
}

#code_area {
  font-size: 14px;
  font-family: courier;
}
