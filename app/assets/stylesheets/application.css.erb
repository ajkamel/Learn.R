 #main_container {
  padding: 0 5px;
 }

 #logo {
  height: 90px;
 }

 #nav {
  display: inline-block;
 }

 #nav img {
  height: 70px;
 }

 #header {
  background: #088AFE url(<%= image_path('banner_100.png') %>) right no-repeat;
  height: 100px;
  overflow: hidden;
 }

 #header ul li {
  display: inline-block;
  padding: 10px;
 }

#welcome_container {
  text-align: center;
}

#welcome_box {
  background: lightgrey;
  display: inline-block;
  margin-top: -20px;
  padding: 50px;
}

#welcome_box h1 {
  font-size: 36px;
  padding: 20px;
}

#inner_welcome_box {
  margin: 0 auto;
  padding: 20px;
  width: 150px;
}

#inner_welcome_box a {
  padding: 10px;
}

.field {
  margin: 0 auto;
  padding: 10px;
  width: 700px;
}

.win-message {
  font-size: 36px;
  font-weight: bold;
  opacity: .9;
  background: lightgrey;
  border-radius: 10%;
  height: 400px;
  width: 600px;
  position: fixed;
  margin: 0 auto;
  text-align: center;
  vertical-align: middle;
  z-index: 1000;
}

.win-message p {
  margin-top: 100px;
  padding: 40px;
}

