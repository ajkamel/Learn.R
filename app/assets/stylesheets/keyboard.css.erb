#keyboard-partial {
  background: url(<%= image_path('piano.png') %>) no-repeat;
  background-size: 78%;
  height: 800px;
  position: absolute;
  top: 60px;
}

#keyboard-container {
  margin: 0 auto;
  width: 800px;
}

#music-lesson-text {
  width: 300px;
  float: right;
  margin-top: 100px;
  margin-right: 100px;
  line-height: 24px;
  font-size: 14px;
}

#music-lesson-text h1 {
  font-size: 24px;
  font-weight: bolder;
}

#html-keypad {
  margin-left: 115px;
  margin-top: 200px;

}

#sound-selector {
float: left;
margin-left: 400px;
}

.musiclesson {
  float: left;
}

#keyboard-legend {
  margin-left: 240px;

}

.start-music-button {
  font-size: 14px;
  height: 40px;
  width: 160px;
  margin-left: 200px;
}

.keyboard-description {
  position: absolute;
  margin-left: 150px;
  margin-top: 80px;
  text-align: center;
}

.lesson-player {
  display: inline-block;
  margin: 0 auto;
  text-align: center;
  font-family: Helvetica, Arial, Sans-Serif;
}

.container, .musiclesson {
  width: 1000px ;
  display: inline-block;
  margin-left: 150px ;
  margin-right: auto ;
  vertical-align: center;
}

.key { position: relative; font-family: Helvetica; font-weight: 100; font-size: 12px;
  border: 1px solid rgba(32,32,32,0.2);
  border-radius: 0px 0px 5px 5px;
  cursor:pointer;
    width: 20px;
  height: 100px;
  box-shadow: 0px 5px 1px rgba(32,32,32,0.2);
  -webkit-transition: margin 0.05s ease, background-color 0.05s ease, box-shadow 0.05s ease; }
.key:keypress { background-color: rgb(255,192,32); }

.white-key {
  width: 40px;
  height: 160px;
  text-shadow: 1px -1px 1px rgba(0,0,0,0.5);
  background-color: rgb(255, 255, 255);
  border: 1px solid rgba(32,32,32,0.2);
  border-radius: 0px 0px 5px 5px;
  border-color: rgb(100, 100, 100);
  z-index: 0;
  float: left;
}

.black-key {
  width: 30px;
  height: 100px;
  left: -20px;
  color: #ffffff;
  text-shadow: 0px -1px 1px rgba(255,255,255,0.5);
  background-color: rgb(0, 0, 0);
  border: 1px solid rgba(32,32,32,0.2);
  border-radius: 0px 0px 5px 5px;
  border-color: rgb(100, 100, 100);
  z-index: 1;
  float: left;
}

.half{
  left: -30px;
}

.flat {
  left: -40px;
}

.label {
  position: absolute;
  bottom: 5px;
  text-align: center;
  left: 0px; right: 0px;
  color: rgb(200,200,200)
}


.title { text-shadow: 0px 1px 1px rgba(32,32,32,0.2); font-size: 40px; font-weight: bold; font-family: Helvetica; padding: 10px; text-align: center; }



.small { font-size: 20px; }

.keyboard-options { margin: 30px auto; width: auto; text-align: center; font-size: 12px; font-weight: 200; padding:10px; }

.keyboard { margin: 30px auto; height: 200px; position:relative; user-select:none; -webkit-user-select:none;-moz-user-select:none;-o-user-select:none; float: left;}

.image { border: 1px solid rgba(32,32,32,0.2); color: rgb(32,32,32); font-family: Courier New, Courier, monospace; font-size: 12px; white-space:pre; padding: 10px; margin: 10px; text-align: center; }


